<Page
    x:Class="RestaurantManager.UniversalWindows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.UniversalWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Restaurant Manager" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        <TextBlock Grid.ColumnSpan="2" Grid.Row="1" Text="Internal Test Version" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        <TextBlock
            Grid.Column="0" Grid.Row="3"
            Text="**Go to Orders View**" HorizontalAlignment="Center"
            VerticalAlignment="Center" />
        <TextBlock Grid.Column="1" Grid.Row="3"
            Text="**Submit Order**"
                 HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Page>